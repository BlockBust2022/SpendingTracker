    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Products</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
        <link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">
    </head>
    <body>

        <div id="form-container" class="container">
            <form>
              <div class="row form-group">
                <div id="editor-container">
                  <p>A robot who has developed sentience, and is the only robot of his kind shown to be still functioning on Earth.</p>
                </div>
              </div>
              <div class="row">
                <button class="btn btn-primary" type="submit" value="submit">Save Profile</button>
              </div>
            </form>
          </div>

        
        <script src="https://cdn.quilljs.com/1.0.0/quill.js"></script>
        <script>
            var xhttp  = new XMLHttpRequest()
            const toolbarOptions = {
            container: [
                    ['bold', 'italic'],
                    ['link', 'blockquote', 'code-block', 'image'],
                    [{ list: 'ordered' }, { list: 'bullet' }],
                    [{'header': [1,2,3,4,5,6,false] }]
                ],
            handlers: {'link': function(value) {
                        if (value) {
                            var href = prompt('Enter the URL');
                            this.quill.format('link', href);
                        } else {
                            this.quill.format('link', false);
                        }
                    }
                }
            }
            var quill = new Quill('#editor-container', {
                modules: {
                    toolbar: toolbarOptions
                },
                placeholder: 'Compose an epic...',
                theme: 'snow'
            });

            var form = document.querySelector('form');
            form.onsubmit = function() {
                var name = quill.root.innerHTML

                xhttp.open("POST", "/products", true);
                xhttp.send(name.textContent);          
            };
          </script> 
    </body>
</html>